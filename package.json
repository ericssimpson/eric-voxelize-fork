{
  "name": "voxelize",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/voxelize/voxelize.git",
  "author": "Ian Huang (Shaoru) <ian1314159@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/client"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel \"dev:ts\" \"dev:rs\"",
    "dev:rs": "cross-env RUST_BACKTRACE=full cargo watch -w crates -x \"build --bin server --release\"",
    "dev:ts": "lerna run --parallel dev",
    "demo": "npm-run-all --parallel \"demo:ts\" \"demo:rs\"",
    "demo:rs": "cross-env RUST_BACKTRACE=1 cargo watch -w examples/server -w crates -x \"run --bin server --release\"",
    "demo:ts": "cd examples/client && yarn demo",
    "lint": "eslint --fix --ext js,ts,tsx ."
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2"
  }
}
